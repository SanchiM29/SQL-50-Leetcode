SELECT id, COUNT(friend_id) AS num
FROM (
    -- requester’s perspective
    SELECT requester_id AS id, accepter_id AS friend_id
    FROM RequestAccepted
    UNION ALL
    -- accepter’s perspective
    SELECT accepter_id AS id, requester_id AS friend_id
    FROM RequestAccepted
) AS all_friends
GROUP BY id
ORDER BY num DESC
LIMIT 1;
